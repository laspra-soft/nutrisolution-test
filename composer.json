{
    "name": "acme/cart-validation-test",
    "description": "Technical test - Cart Validation Service",
    "type": "project",
    "require": {
        "php": "^8.3",
        "slim/slim": "^4.14",
        "slim/psr7": "^1.7",
        "php-di/php-di": "^7.0",
        "php-di/slim-bridge": "^3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "start": "php -S localhost:8080 -t public"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
